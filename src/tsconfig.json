{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../dist/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },

"filesGlob": [
"**/*.ts"
],
"atom": {
  "rewriteTsConfig": true
},

"files": [
    "main.ts",
    "typings.d.ts"
  ],


  "exclude": [
      "node_modules",
      "typings/main",
      "typings/main.d.ts"
  ]}
